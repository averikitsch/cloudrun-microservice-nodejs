{
  "name": "cloudrun-microservice-template",
  "version": "1.0.0",
  "description": "Template microservice for running on Cloud Run",
  "main": "index.js",
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "gcloud builds submit --tag gcr.io/$PROJECT_ID/cloudrun-microservice-template",
    "deploy": "gcloud run deploy cloudrun-microservice-template --image gcr.io/$PROJECT_ID/cloudrun-microservice-template --allow-unauthenticated --platform managed --region us-central1",
    "test": "mocha test/app.test.js --check-leaks",
    "system-test": "mocha test/system.test.js --timeout=180000"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/trace-agent": "^5.1.1",
    "express": "^4.17.1",
    "gcp-metadata": "^4.2.1",
    "google-auth-library": "^6.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1"
  }
}
